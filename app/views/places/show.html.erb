<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <div class="float-right">    
    <% if current_user && current_user == @place.user %>
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
      <%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?'}, class: 'btn btn-primary'%>
    <% end %>
  </div>
  <br /><br />
  <p><%= @place.description %></p>

  <% if @place.latitude.present? && @place.longitude.present? %>
    <script>
      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBFhKGGyg_SOxL4vPQgNBKAVAOvzJ2IwzM&callback=initMap">
    </script>

    <div id="map"></div>

  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Add a Comment</h4>
      </div>
        <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
          <div class="modal-body">
            <%= f.input :message %>
            <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
        </div>
      <% end %>   
    </div>
  </div>
</div>

<div class="col-10 offset-1">
<h1 class="float-left">Comments</h1>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-med float-right" data-toggle="modal" data-target="#myModal">
  Add a Comment
</button>
</div>

<div class="clear"></div>

<div class="row">
  <% @place.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>

<br /><br />

<div class="col-10 offset-1">
  <h1 class="float-left">Photos</h1>
</div>

  <div class="clear"></div>

<% @place.photos.each do |photo| %>
  <div class="col-12 col-sm-6">
    <b><%= photo.caption %></b>
  </div>
<% end %>


<%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
<%= f.input :caption %>
<%= f.submit "Add a Photo", class: 'btn btn-primary' %>
<% end %>